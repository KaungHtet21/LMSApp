<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <stroke android:width="@dimen/_2sdp"
                android:color="@color/main_color"/>
        </shape>
    </item>

    <item
        android:bottom="@dimen/_3sdp"
        android:left="@dimen/_3sdp"
        android:right="@dimen/_3sdp"
        android:top="@dimen/_3sdp">
        <shape android:shape="oval">
            <stroke android:width="@dimen/_3sdp"
                android:color="@color/white"/>
        </shape>
    </item>

    <item
        android:bottom="@dimen/_4sdp"
        android:left="@dimen/_4sdp"
        android:right="@dimen/_4sdp"
        android:top="@dimen/_4sdp">

        <shape android:shape="oval">
            <solid android:color="@color/main_color"/>
        </shape>
    </item>
</layer-list>